---
import "@fontsource/fira-code";

import "../styles/global.css";

import * as Icon from "@astropub/icons";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="absolute bottom-0 top-0 left-8">
      <div class="flex flex-col items-center">
        <div class="bg-gray-200 w-[1px] h-[198px]"></div>
        <a
          href="https://github.com/alexandredev3"
          target="_blank"
          class="group mt-2"
          aria-label="Link to Alexandre's Github account"
        >
          <Icon.GitHubLogo
            class="fill-gray-200 w-8 h-8 group-hover:fill-gray-500 transition-all"
            focusable="false"
          />
        </a>
      </div>
    </div>
    <div class="w-[1024px] m-auto p-8">
      <slot />
    </div>
  </body>
</html>
