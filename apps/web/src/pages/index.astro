---
import { Icon } from "astro-icon";

import Layout from "@/layouts/Layout.astro";
import Button from "@/components/Button.astro";
import NavBar from "@/components/NavBar.astro";
---

<Layout title="Alexandre's nice portfolio">
  <header class="flex items-center justify-between h-[42px]">
    <div class="flex items-center gap-2">
      <Icon name="fe:code" class="w-5 h-5 text-yellow-300" />
      <h1 class="text-sm">Alexandre C.</h1>
    </div>

    <NavBar />
  </header>

  <main class="sm:mt-32 mt-11">
    <section>
      <h2 class="text-md mb-3">
        Hello! I Am <strong class="text-yellow-300">Alexandre</strong>,
      </h2>
      <h1 class="text-lg">
        A <strong class="text-yellow-300">Web Developer</strong>
      </h1>
      <p class="max-w-[462px] w-full mt-8 text-gray-200 leading-6">
        I build responsive websites where technologies meet creativity
      </p>
      <Button class="mt-6" type="button">Contact me!!</Button>
    </section>
  </main>
</Layout>
